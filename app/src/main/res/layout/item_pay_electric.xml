<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin80dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/margin10dp"
    android:paddingTop="@dimen/margin10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/electric" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewProjectName"
            style="@style/normal_text"
            android:text="项目名称"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin50dp">

            <TextView
                android:id="@+id/textViewRoomNum"
                style="@style/normal_text"
                android:layout_marginTop="@dimen/margin10dp"
                android:text="房间号"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewSite"
                style="@style/normal_text"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/margin10dp"
                android:text="位置"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin20dp"
        android:src="@mipmap/right_go2x" />

</RelativeLayout>