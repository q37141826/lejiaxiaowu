<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">


    <com.qixiu.widget.RoundedImageView
        android:id="@+id/story_image"
        android:layout_width="180dp"
        android:layout_height="122dp"
        android:scaleType="fitXY"
        android:src="@drawable/holder_middle_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/title_story_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/sp_12"
            android:paddingRight="@dimen/sp_12"
            android:text="这个人城市里有我"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/context_story_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_14"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingLeft="@dimen/sp_12"
            android:paddingRight="@dimen/sp_12"
            android:text="我匍匐了一百年微笑着焚烧了一百年只为等待与你灰飞烟灭的重逢因为你的快乐是我全部的信仰我说过我不是天使，即使是天时，也需要别人的关心，哪怕给我一个关爱的延伸，但没有，什么都没有我忘记了哪年哪月的哪一天，我在哪面墙上刻下了一张脸，一张微笑着，忧伤着，凝望着我的脸"
            android:textColor="@color/grey_500"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>