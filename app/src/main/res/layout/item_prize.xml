<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <TextView
        android:background="@color/grey_300"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        tools:ignore="Suspicious0dp" />
    <LinearLayout
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_prize"
            android:layout_width="67dp"
            android:layout_height="77dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:src="@color/red" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_prize_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="水电费水电费克里斯水电费水电费克里斯水电费水电费克里斯水电费水电费克里斯水电费水电费克里斯"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_prize_title_text"
                android:layout_marginTop="5dp"
                android:text="提货码:"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView_prize_numble_immage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_prize_title_text"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/text2"
                android:textIsSelectable="true"
                android:text="LS156846482"
                android:textColor="#EA712E"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iamgeView_is_Received"
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:src="@drawable/yth3x" />

    </LinearLayout>


</LinearLayout>