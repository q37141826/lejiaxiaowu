<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:paddingTop="@dimen/activity_padding">

        <android.support.v7.widget.DialogTitle
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="有新版本" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="新版本发布啦~"
            android:textColor="@color/textColorSecondary" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- <TextView
             android:id="@+id/version_size"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:text="apk大小：8M" />

         <TextView
             android:id="@+id/version_date"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:text="更新时间：2016-10-30" />

         <TextView
             android:id="@+id/version_explain"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             tools:text="更新内容：\n1.新首页引导，找房更快更方便 \n2.从房源到服务，自营第三方双体系选择 \n3.房价行情，一手掌握房价动态" />-->


    </LinearLayout>

    <android.support.v7.widget.ButtonBarLayout
        style="?attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        app:allowStacking="@bool/abc_allow_stacked_button_bar"
        tools:ignore="PrivateResource">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/negative"
            style="?attr/buttonBarNegativeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/positive"
            style="?attr/buttonBarPositiveButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即更新" />

    </android.support.v7.widget.ButtonBarLayout>

</LinearLayout>