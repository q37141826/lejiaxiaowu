    <RelativeLayout
        android:paddingLeft="@dimen/margin10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin70dp"
        android:paddingRight="@dimen/margin10dp">

        <ImageView
            android:id="@+id/imageView_item_message"
            android:layout_width="@dimen/margin55dp"
            android:layout_height="@dimen/margin55dp"
            android:layout_margin="@dimen/margin5dp" />
        <TextView
            android:gravity="center"
            android:background="@drawable/red_point"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:id="@+id/textView_unread_notice"
            android:layout_marginTop="@dimen/margin10dp"
            android:layout_alignRight="@+id/imageView_item_message"
            android:layout_width="@dimen/margin15dp"
            android:layout_height="@dimen/margin15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imageView_item_message"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin30dp"
                android:layout_marginTop="@dimen/margin10dp">

                <TextView
                    android:id="@+id/textView_title_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐家助手"
                    android:textColor="@color/grey_900"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_time_message"
                    style="@style/normal_text"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_item_message_content"
                    style="@style/normal_text"
                    android:layout_width="0px"
                    android:layout_weight="9"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <ImageView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/right_go2x" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>