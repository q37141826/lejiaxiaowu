<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_time_preferential_item"
        style="@style/normal_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin50dp"
        android:gravity="center"
        android:text="测试一下" />

    <LinearLayout
        android:id="@+id/linearLayout_preferential"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin10dp"
        android:paddingRight="@dimen/margin10dp">

        <TextView
            android:id="@+id/textView_preferential"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp"
            android:gravity="center_vertical"
            android:text="签约成功"
            android:textSize="15sp" />


        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/holder_home_banner"
            android:layout_marginBottom="@dimen/margin10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/screenwith_forthper" />

        <TextView
            style="@style/normal_text_grey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp"
            android:gravity="center_vertical"
            android:text="您已经成功" />
    </LinearLayout>

</LinearLayout>