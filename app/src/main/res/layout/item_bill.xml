<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="测试一下"
        android:gravity="center"
        android:id="@+id/textView_time_bill_item"
        style="@style/normal_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin50dp" />
    <LinearLayout
        android:id="@+id/linearLayout_Lease"
        android:background="@color/white"
        android:paddingRight="@dimen/margin10dp"
        android:paddingLeft="@dimen/margin10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_bill"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="签约成功"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:gravity="center_vertical"
            android:text="您已经成功"
            android:layout_width="match_parent"
            style="@style/normal_text_grey"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:gravity="center"
            android:text="RMB 1250/月"
            android:textSize="15sp"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />

        <TextView
            android:text="账单周期    11111"
            android:id="@+id/textView_lease_time_last"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp"  />
        <TextView
            android:text="缴费截止    11111"
            android:id="@+id/textView_lease_time_period"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp"  />

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/holder_home_banner"
            android:layout_marginBottom="@dimen/margin10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/screenwith_forthper" />
    </LinearLayout>

</LinearLayout>