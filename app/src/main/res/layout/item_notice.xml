<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:text="测试一下"
            android:gravity="center"
            android:id="@+id/textView_time_notice_item"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp" />
    <LinearLayout
        android:id="@+id/linearLayout_Lease"
        android:background="@color/white"
        android:paddingRight="@dimen/margin10dp"
        android:paddingLeft="@dimen/margin10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/margin5dp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:id="@+id/textView_Lease_title"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="签约成功"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:id="@+id/textView_lease_content"
            android:gravity="center_vertical"
            android:text="您已经成功"
            android:layout_width="match_parent"
            style="@style/normal_text_grey"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:id="@+id/textView_lease_money"
            android:gravity="center"
            android:text="RMB 1250/月"
            android:textSize="15sp"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:text="租期开始    11111"
            android:id="@+id/textView_lease_time_start"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:text="租        期    11111"
            android:id="@+id/textView_lease_time_last"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp"  />
        <TextView
            android:text="账单租期    11111"
            android:id="@+id/textView_lease_time_period"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp"  />
        <TextView
            android:text="签约截止    11111"
            android:id="@+id/textView_lease_time_end"
            style="@style/normal_text"
            android:paddingBottom="@dimen/margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
        <com.qixiu.widget.RoundedImageView
            android:id="@+id/imageView_lease_pic"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/margin10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/screenwith_forthper" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_appointment"
        android:background="@color/white"
        android:paddingRight="@dimen/margin10dp"
        android:paddingLeft="@dimen/margin10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:id="@+id/textView_appointment_title"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="预约成功"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />
        <TextView
            android:id="@+id/textView_appoint_content"
            android:gravity="center_vertical"
            android:text="您已经成功"
            android:layout_width="match_parent"
            style="@style/normal_text_grey"
            android:paddingBottom="@dimen/margin5dp"
            android:layout_height="wrap_content" />
        <com.qixiu.widget.RoundedImageView
            android:layout_marginTop="@dimen/margin5dp"
            android:id="@+id/imageView_appoint_content"
            android:scaleType="centerCrop"
            android:layout_marginBottom="@dimen/margin10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/screenwith_forthper" />
        <TextView
            android:paddingBottom="@dimen/margin5dp"
            android:text="预约门店    11111"
            android:id="@+id/textView_appointment_where"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />
        <TextView
            android:paddingBottom="@dimen/margin5dp"
            android:text="预约时间    11111"
            android:id="@+id/textView_appointment_time"
            style="@style/normal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

    </LinearLayout>
</LinearLayout>